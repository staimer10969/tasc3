<body>
  <main>
    <p class="notice"></p>
    <div class="container">
      <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
         <h1>Editing Book</h1>

         <div id="error_expalation">
           <% if @book.errors.any? %>
           <h3 class><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
           <ul>
            <% @book.errors.full_messages.each do |message| %>
             <li><%= message %></li>
            <% end %>
           </ul>
           <% end %>
         </div>

         <%= form_with model: @book do |f| %>
          <label for="inputTitle">Title</label><br>
          <%= f.text_field:title, autofocus:true,id:"inputTitle", placeholder:"Title", class:"form-control" %><br>
          <label for="inputOpinion">Opinion</label><br>
          <%= f.text_area:body, autofocus:true,id:"inputOpinion", placeholder:"Opinion", class:"form-control" %><br>
          <input type="submit" name="commit" value="Update Book" class="btn btn-success" link_to="book_path(current_user.id)" data-disable-with="Update Book">
         <% end %>
         <p class="notice"></p>
         <%= link_to "Show",book_path(@book.id) %>
          |
         <%= link_to "Back",books_path %>
        </div>
      </div>
    </div>
  </main>

  <footer>
   <div class="container mt-5">
    <div class="row">
     <div class="mx-auto">
      <p>CopyRight Infratop.inc</p>
     </div>
    </div>
   </div>
  </footer>
</body>